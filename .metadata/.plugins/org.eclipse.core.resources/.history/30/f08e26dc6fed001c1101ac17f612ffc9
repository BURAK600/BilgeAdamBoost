package bilgeadamweek2;

import java.util.Scanner;

public class ArraysIn {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);

		String[] dizi = { "Türkiye", "Japonya", "Mogolistan", "Danimarka" };
		System.out.print("Ulke ismi giriniz: ");
		String string = scanner.nextLine();
		for (int i = 0; i < dizi.length; i++) {
			if (string.equals(dizi[i])) {
				System.out.println(" Ulke bulundu");
			} else {
				System.out.println("Ulke bulunamadı!");
			}
		}
	}

}
